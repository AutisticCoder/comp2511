package lab02.domain;
import java.text.NumberFormat;
import java.time.LocalDate;
/*
 * @author Aarthi
 * A class to store details about staff
 */
public class Staff {
	protected String last_name;
	protected String first_name;
	protected String name;
	protected int salary;
	protected int id;
	protected LocalDate hire_date;
	protected LocalDate end_date;
	public Staff(String last_name, String first_name, int salary, int id, LocalDate hire_date, LocalDate end_date) {
		this.last_name = last_name;
		this.first_name = first_name;
		this.salary = salary;
		this.hire_date = hire_date;
		this.end_date = end_date;
		this.name = this.first_name + " " + this.last_name;
	}
	
	
}
